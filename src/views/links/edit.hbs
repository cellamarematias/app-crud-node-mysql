<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card ">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                        <div class="form-group mb-3">
                            <input type="text" value="{{link.title}}" name="title" class="form-control" placeholder="Título" autofocus>
                        </div>
                        <div class="form-group mb-3">
                            <input type="url" value="{{link.url}}" name="url" class="form-control" placeholder="URL">
                        </div>
                        <div class="form-group mb-3">
                            <textarea name="description"  rows="2" class="form-control" placeholder="Descripción">{{link.description}}</textarea>
                        </div>
                        <div class="form-group d-grid">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>